---
interface SectionProps {
  id: string;
  maxWidth?: string;
}

const { id, maxWidth } = Astro.props as SectionProps;
---

<section
  id={id}
  data-section={id}
  class={`
  ${Astro.props.class}
  section scroll-m-20 w-full h-screen py-20 relative`}
>
  <div class=`w-full max-w-[${maxWidth}px] mx-auto h-full`>
    <slot />
  </div>
</section>
